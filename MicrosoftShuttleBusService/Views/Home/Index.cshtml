                    var btn = document.createElement('button');
                    btn.setAttribute("onclick", functionName + "(this)");
                    btn.setAttribute("class", "setBtn");
                    btn.setAttribute("style", "font-weight: bold; background-position: -21px -81px;");
                    btn.innerHTML = "选择";
